@import '/page/common/common.wxss';

page {
    background-color: #f5f5f5;
}

.page_content {
    padding-bottom: 120rpx;
}

.item>view:first-child {
    color: #333;
    font-size: 30rpx;
}

.item>view:last-child {
    color: #999;
}

.item-column {
    min-height: 90rpx;
    height: auto;
    padding-bottom: 30rpx;
    align-items: flex-start;
    flex-direction: column;
    justify-content: flex-start;
}

.item-column>view:first-child {
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: none;
}

.other-tel {
    min-height: 90rpx;
    height: auto;
}

.other-tel .tel {
    width: 400rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-end;
}

.other-tel .tel>view {
    line-height: 60rpx;
    margin-left: 16rpx;
}

.visit-record {
    font-size: 24rpx;
    color: #999;
}

.visit-record>view {
    margin: 28rpx 24rpx 28rpx 96rpx;
}

.visit-record>view>text {
    margin-right: 15rpx;
}

.content {
    min-height: 150rpx;
    font-size: 30rpx;
    color: #333;
    padding: 24rpx;
    background-color: #fff;
    border-bottom: 1rpx #eee solid;
}

.content>view:last-child {
    margin-top: 24rpx;
    color: #999;
}

.page_btn {
    height: 90rpx;
    line-height: 90rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: #4a90e2;
    color: #fff;
    width: 100%;
    font-size: 28rpx;
    text-align: center;
}

.visit_type {
    font-size: 28rpx;
    color: #666;
    display: flex;
}

.visit_type>text, .follow_content>text {
    font-size: 30rpx;
    color: #333;
}

.visit_type>radio-group, .follow_content>textarea {
    font-size: 28rpx;
    color: #666;
}

radio-group>label>radio {
    transform: scale(0.8);
}

.follow_content {
    margin-top: 24rpx;
    font-size: 28rpx;
}

.follow_content>textarea {
    margin-top: 18rpx;
    width: 100%;
    height: 150rpx;
}

.red_info {
    color: #E64340;
    margin-bottom: 24rpx;
}
