@import '/page/common/common.wxss';

page {
    background-color: #f5f5f5;
}

.page-section {
    background-color: #fff;
}

.tab {
    font-size: 28rpx;
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 100;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
}

.tab::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 2rpx;
    background-color: #eee;
    transform: scaleY(0.5);
}

.tab view {
    flex: 1;
    height: 100%;
    line-height: 90rpx;
    text-align: center;
    color: rgba(74, 144, 226, 0.4);
}

.tab .active {
    color: #4a90e2;
    box-sizing: border-box;
    border-bottom: 4rpx solid #4a90e2;
}

.items {
    margin-top: 90rpx;
}

.user_gender {
    margin-left: 12rpx;
    color: #999;
}

.load_more, .empty {
    font-size: 24rpx;
    color: #999;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
}

.empty {
    background-color: #f5f5f5;
}
