@import '/page/common/common.wxss';

page {
    background-color: #f5f5f5;
}

.account_wrap {
    background-color: #fff;
    padding: 0 24rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 120rpx;
    border-bottom: 1rpx #eee solid;
}

radio-group {
    margin-top: 36rpx;
}

.account_wrap-hd {
    display: flex;
    align-items: center;
}

.account_wrap-hd>image {
    margin-right: 20rpx;
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}

.account-info {
    display: flex;
    flex-direction: column;
}

.account-info>text:first-child {
    color: #333;
    margin-bottom: 5rpx;
    font-size: 32rpx;
}

.account-info>text:last-child {
    color: #999;
    font-size: 24rpx;
}

.account_add-new>view {
    font-size: 32rpx;
    color: #4a90e2;
    line-height: 100%;
}

.account_add-new>image {
    display: block;
    width: 48rpx;
    margin-left: 21rpx;
}

/*  重写 radio 样式  */

radio .wx-radio-input {
    border: none;
}

radio .wx-radio-input.wx-radio-input-checked::before {
    width: 70rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: right;
    font-size: 46rpx;
    color: #4a90e2;
    background: #fff;
}
